{
  "name": "SaitaFilter",
  "version": "1.0.0",
  "manifest_version": 2,

  "description": "Filter any Collection on a Website with custom Criteria",

  "permissions": [
    "<all_urls>",
    "activeTab"
  ],

  "browser_action": {
    "name": "Click here"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js"]
    }
  ]

}
